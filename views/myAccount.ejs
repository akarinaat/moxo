<%- include ("./templates/_header") %>
  

<div class="main-content">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <div class="container mt-7">
      <!-- Table -->
      <h2 class="mb-5">Mi cuenta</h2>
      <div class="row">
        <div class="col-xl-8 m-auto order-xl-1">
          <div class="card bg-secondary shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-8">
                  <h3 class="mb-0">Mi cuenta</h3>
                </div>
              </div>
            </div>
            <div class="card-body">
              <form action="/updateAccount/<%= customer._id  %>" method="POST" >
                <h6 class="heading-small text-muted mb-4">User information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input-username">Nombre</label>
                        <input type="text" id="input-username" name="nombre" class="form-control form-control-alternative" placeholder="Username" value="<%= customer.nombre%>">
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input-email">Email address</label>
                        <input type="email" id="input-email" name="email" class="form-control form-control-alternative" placeholder="jesse@example.com" value="<%= customer.email%>" disabled>
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <button class="btn btn-lg btn-primary btn-block" type="submit">Update</button>
                    </div>
                  </div>
                </div>              
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 
<%- include ("./templates/_footer") %>